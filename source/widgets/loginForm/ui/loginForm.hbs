<div id="right" class="container">
  <form class="container__login-form" method="post">
    <p class="container__login-form__p">Войдите в Patefon</p>
    <div class="container__login-form__error-div">
      <span class="container__login-form__error-div__span errorLogin" id="errorLogin"></span>
    </div>
    <input
      id="login"
      class="container__login-form__input login not_error"
      type="text"
      placeholder="Логин"
      name="text"
    />
    <div class="container__login-form__error-div">
      <span class="container__login-form__error-div__span errorPassword" id="errorPassword"></span>
    </div>
    <div class="container__login-form__password-div" style="position: relative;">
      <input
        id="password"
        class="container__login-form__input container__login-form__password-div__input password not_error"
        type="password"
        placeholder="Пароль"
        name="password"
      />
      <img
        id="password-visibility-toggle"
        class="container__login-form__password-div__img password-visibility-toggle"
        src="/assets/image/eye.svg"
      />
    </div>
    <button class="container__login-form__button btn Enter" type="submit" id="Enter">Войти</button>

  </form>
  <button class="container__button btn Create" type="submit" id="Create">Создать аккаунт</button>
</div>