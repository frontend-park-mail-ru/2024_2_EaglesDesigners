<div
  class="message{{unless message.first ' first-message'}}{{unless
      message.last
      ' last-message'
    }}{{unless message.isFromOtherUser ' left-side'}}"
>
  <div class="message__body">
    <span class="message__body__username">
      {{message.authorName}}
    </span>
    <span class="message__body__text">
      {{message.text}}
    </span>
    <span class="message__body__meta">
      <span class="timedate">
        {{message.datetime}}
      </span>
    </span>
  </div>
  <div class="message__avatar">
    <img class="message__avatar__img" src="{{message.avatarURL}}" />
  </div>
</div>